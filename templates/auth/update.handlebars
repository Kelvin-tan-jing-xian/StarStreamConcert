                <div class="form-group">
                    <label for="email"><strong>Email</strong></label>
                    <input type="email" name="email" class="form-control" value="{{content.email}}"
                        placeholder="E.g Example@gmail.com" required>
                </div>
                {{!-- Admin help user change password? --}}
                <div class="form-group">
                    <label for="password"><strong>Password</strong></label>
                    <input type="password" name="password" class="form-control" placeholder="P@ssw0rdu"  required>
                </div>
                <div class="form-group">
                    <label for="password2"><strong>Confirm password</strong></label>
                    <input type="password" name="password2" class="form-control" 
                        placeholder="Re-enter password" required>
                </div>
                <div class="form-group">
                    <label><strong>Click on the radio button to upgrade this user to admin</strong> </label><br>
                    <input type="radio" id="admin" name="role" value="admin">
                    <label for="admin">Upgrade to admin</label>

                </div>
                <button id="btnSubmit" type="submit" class="btn btn-primary">Save</button>
                <a id="btnCancel" class="btn btn-primary" href="/admin/auth/retrieve">Cancel</a>

            </form>
        </div>
    </div>
