<div class="container">
    <div class="card card-body">
        <h3>Feedback</h3>
        <h4>Please take a short moment to fill up this feedback form so we can ensure a top quality experience for all our customers</h4>
        <form enctype="multipart/form-data" action="/feedback/addFeedback" method="post" >
            <div class="form-group">
                <label class="font-italic" for="name">Your Name</label>
                <br>
                <input type="text" class="form-control" name="name" value="{{user.name}}" required>

            </div>
            <div class="form-group">
                <label class="font-italic" for="Rating">Rating</label>
                <br>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="1" value="1" name="Rating" checked>
                    <label class="form-check-label" for="1">1</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="2" value="2" name="Rating">
                    <label class="form-check-label" for="2">2</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="3" value="3" name="Rating">
                    <label class="form-check-label" for="3">3</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="4" value="4" name="Rating">
                    <label class="form-check-label" for="4">4</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="5" value="5" name="Rating">
                    <label class="form-check-label" for="5">5</label>
                </div>
            </div>
            <div class="form-group mb-4">
                <label class="font-italic" for="feedbackResponse">Feedback:</label>
                <textarea class="form-control" id="feedbackResponse" name="feedbackResponse" ></textarea required>
            </div>

            <div class="form-group">
                <div class="row mb-2">
                  
                    <div class="col-12 col-sm-12 col-md-12 col-lg-6">
                        <label class="font-italic">feedbackType</label>
                        <br>
                        {{!-- radio buttons --}}
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" value="Website service" name="feedbackType">
                            <label class="form-check-label">Website service</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" value="Streaming service" name="feedbackType">
                            <label class="form-check-label">Streaming service</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" value="Others" name="feedbackType">
                            <label class="form-check-label">Others</label>
                        </div>
                        
                    </div>
                </div>
            </div>


            <br>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>


<style>
h4{
    font-size: small;
}
</style>