<div class="container">
    <div class="card card-body">
        <h1>Hi {{user.name}}. Please take a short moment to fill up this feedback form</h1>
        <form action="/feedback/create" method="post" >
            <div class="form-group">
                <label class="font-italic" for="rating">Please rate your overall experience</label>
                <br>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="1" value="1" name="rating" checked>
                    <label class="form-check-label" for="1">1</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="2" value="2" name="rating">
                    <label class="form-check-label" for="2">2</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="3" value="3" name="rating">
                    <label class="form-check-label" for="3">3</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="4" value="4" name="rating">
                    <label class="form-check-label" for="4">4</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="5" value="5" name="rating">
                    <label class="form-check-label" for="5">5</label>
                </div>
            </div>
            <div class="form-group mb-4">
                <label class="font-italic" for="feedbackGiven">Feel free to leave any feedback:</label>
                <textarea class="form-control" id="feedbackGiven" name="feedbackGiven" required></textarea>
            </div>

            <div class="form-group">
                <div class="row mb-2">
                  
                    <div class="col-12 col-sm-12 col-md-12 col-lg-6">
                        <label class="font-italic">What is the feedback type?</label>
                        <br>
                        {{!-- radio buttons --}}
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" value="Website service" name="feedbackType">
                            <label class="form-check-label">Booking service</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" value="Streaming service" name="feedbackType">
                            <label class="form-check-label">Streaming service</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" value="Others" name="feedbackType">
                            <label class="form-check-label">Others</label>
                        </div>
                        
                    </div>
                </div>
            </div>


            <br>
            <button type="submit" class="btn btn-primary" >Submit</button>
        </form>
    </div>
</div>


<style>
h4{
    font-size: small;
}



</style>