<div class="container">
	<div class="card card-body">
		<h3>Ticket Details</h3>
		<form action="/addVideo" method="post" id="addVideo">
			<div class="form-group">
				{{!-- Practical 5 Exercise 2: Add a title input text here named 'title'--}}
				<label class="font-italic" for="title">Concert Name</label>
				<input class="form-control" id="title" name="title" rows="7"></input>
			</div>
            <div class="form-group">
				<label class="font-italic" for="title">Artist Name</label>
				<input class="form-control" id="title" name="title" rows="7"></input>
			</div>
			<div class="form-group mb-4">
				<label class="font-italic" for="story">Concert Details</label>
				<textarea class="form-control" id="story" name="story" rows="7"></textarea>
			</div>

			<div class="form-group">
				<div class="row mb-2">
					<div class="col-12 col-sm-12 col-md-12 col-lg-6 mb-4">
						<label class="font-italic">Date of Concert</label>
						<input id="datepicker" width="200" name="dateRelease" />
					</div>
					<div class="col-12 col-sm-12 col-md-12 col-lg-6">
						<label class="font-italic">Concert Time</label>
						<br>
					{{!-- Practical 5 Exercise 2: Language radio buttons here'--}}
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" name="subtitles" id="chinese" value="Chinese">
							<label class="form-check-label" for="chinese">10am ~ 1pm</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" name="subtitles" id="english" value="English">
							<label class="form-check-label" for="englishLang">3pm ~ 6pm</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" name="subtitles" id="malay" value="Malay">
							<label class="form-check-label" for="malay">7pm ~ 11pm</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" name="subtitles" id="tamil" value="Tamil">
							<label class="form-check-label" for="tamil">12pm ~ 3am</label>
						</div>
						{{!--<div class="form-check form-check-inline">
							<div class="form-group">
								<input type="text" class="form-control form-control-sm" name="otherSub" id="otherSub" placeholder="Other">
							</div>
						</div>--}}

					</div>
				</div>
			</div>

			<div class="form-group">
				<div class="row">
					<div class="col-12 col-sm-12 col-md-6 col-lg-6">
						<label class="font-italic">Price of Tickets</label>
						<br>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" name="subtitles" id="chinese" value="Chinese">
							<label class="form-check-label" for="chinese">$40</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" name="subtitles" id="english" value="English">
							<label class="form-check-label" for="englishLang">$50</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" name="subtitles" id="malay" value="Malay">
							<label class="form-check-label" for="malay">$60</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" name="subtitles" id="tamil" value="Tamil">
							<label class="form-check-label" for="tamil">$70</label>
						</div>
						{{!--<div class="form-check form-check-inline">
							<div class="form-group">
								<input type="text" class="form-control form-control-sm" name="otherSub" id="otherSub" placeholder="Other">
							</div>
						</div>--}}
					</div>

					<div class="col-12 col-sm-12 col-md-6 col-lg-6">
						<label class="font-italic">Concert Venue</label>
						<br>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" id="G" value="G" name="classification" checked>
							<label class="form-check-label" for="G">Star Theatre</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" id="PG" value="PG" name="classification">
							<label class="form-check-label" for="PG">Star Lodge</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" id="PG13" value="PG13" name="classification">
							<label class="form-check-label" for="PG13">Star Terrace</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" id="NC13" value="NC13" name="classification">
							<label class="form-check-label" for="NC13">Star Gallery</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" id="M18" value="M18" name="classification">
							<label class="form-check-label" for="M18">Star Loft</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" id="R21" value="R21" name="classification">
							<label class="form-check-label" for="R21">Other Rooms</label>
						</div>
					</div>
				</div>

			</div>
			<br>
			<button id="butAddVideo" href="Saved" type="button" class="btn btn-primary">Save
			</button>
		</form>
	</div>
</div>


<script>
		$('#datepicker').datepicker({
			format: 'dd/mm/yyyy',
			value: new Date().toLocaleDateString('en-AUS'),
			uiLibrary: 'bootstrap4',
		});
</script>