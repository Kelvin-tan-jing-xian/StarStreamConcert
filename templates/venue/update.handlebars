
            <h3>Update Venue</h3>
            <form action="/venue/update/{{content.uuid}}" method="post" id="content-form"
                enctype="multipart/form-data">
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label class="font-italic" for="venueName">venueName</label>
                            <input type="text" class="form-control typeahead" name="venueName" value="{{content.venueName}}"
                                id="content-title" data-provide="typeahead" autocomplete="off" rows="7" required>
                        </div>
            
                        <div class="form-group mb-4">
                            <label class="font-italic" for="venueStory">venueStory</label>
                            <textarea class="form-control" id="venueStory" name="venueStory" required>{{content.venueStory}}</textarea>
                        </div>
                    </div>
            
                    <div class="form-group col">
                        <label class="font-italic" for="venuePoster">venuePoster</label>
                        <br>
                        <input type="file" id="venuePoster" name="venuePoster" accept="image/png,image/jpeg,image/jpg,image/gif">
                            {{!-- To display error message --}}
                        <div class="font-weight-bold text-danger small" id="posterErr" style="display:none"></div>
                    </div>
                </div>
            
                <div class="form-group">
                    <div class="row mb-2">
                        <div class="col-12 col-sm-12 col-md-12 col-lg-6 mb-4">
                            <label class="font-italic">venueDate</label>
                            <input id="datepicker" width="200" name="venueDate" value="{{ content.venueDate }}" />
                        </div>
                        <div class="col-12 col-sm-12 col-md-12 col-lg-6">
                            <label class="font-italic">venueTime</label>
                            <br>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" value="10am ~ 1pm" name="venueTime" checked>
                            <label class="form-check-label">10am ~ 1pm</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" value="3pm ~ 6pm" name="venueTime">
                            <label class="form-check-label">3pm ~ 6pm</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" value="7pm ~ 10pm" name="venueTime">
                            <label class="form-check-label">7pm ~ 10pm</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" value="12pm ~ 3am" name="venueTime">
                            <label class="form-check-label">12pm ~ 3am</label>
                        </div>
                    </div>
                </div>
            
                <div class="form-group">
                    <div class="row">
                        <div class="col-12 col-sm-12 col-md-6 col-lg-6">
                            <label class="font-italic">venuePrice</label>
                            <br>
            
                            <div class="form-check form-check-inline">
                                {{!-- radio buttons --}}
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" id="venuePrice" value="$2000/hr" name="venuePrice" checked>
                                    <label class="form-check-label" for="venuePrice">$2000/hr</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" id="venuePrice" value="$2500/hr" name="venuePrice">
                                    <label class="form-check-label" for="venuePrice">$2500/hr</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" id="venuePrice" value="$3000/hr" name="venuePrice">
                                    <label class="form-check-label" for="venuePrice">$3000/hr</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" id="venuePrice" value="$3500/hr" name="venuePrice">
                                    <label class="form-check-label" for="venuePrice">$3500/hr</label>
                                </div>
                                <br>
                                {{!--<div class="form-check form-check-inline">
                                    <div class="form-group">
                                        <input type="text" class="form-control form-control-sm" name="otherSub" id="otherSub" placeholder="Other">
                                    </div>
                                </div>--}}


                            </div>
                        </div>
            
                    </div>
                </div>
            
                <br>
            
                <button id="btnSubmit" type="submit" class="btn btn-primary">Save</button>
                <a id="btnCancel" class="btn btn-primary" href="/venue/retrieve">Cancel</a>
            </form>
            
<script>
    // 1. Variable is correct x.ssss
    // 2. value or default date assigned to a string
    var dateToday = new Date();
    $('#datepicker').datepicker({
        format: 'yyyy-mm-dd',
        uiLibrary: 'bootstrap4',
        minDate: dateToday
    });

    function preventMinusSign(myfield, e) {
        console.log('inputted');
        // prevent - from being entered
        $("#venuePrice").keyup(function () {
            $(this).val().replace(/[-]/g, "");
        });
    }
</script>