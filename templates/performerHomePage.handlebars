{{!-- UPCOMING STREAM --}}
<section id="upcoming_stream" class="upcoming_stream">
    <div class="container">

        <div class="section-title">
            <h2>Upcoming Stream</h2>
        </div>

        <div class="row">
            {{#each streams}}
            <div class="col-md-6 col-lg-3 d-flex align-items-stretch mb-3 mt-3">
                <div class="icon-box">
                    <img class="stream-img" src="/{{ concertPoster }}" style="width:200px; height:200px">
                    <h4 class="title mt-3 mb-3">{{ concertName }}</h4>
                    <div class="d-flex justify-content-between mt-4">
                        <h4 class="title">Date:</h4>
                        <h4 class="detail text-muted">{{ concertDate }}</h4>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <h4 class="title">Time:</h4>
                        <h4 class="detail text-muted">{{ concertTime }}</h4>
                    </div>
                    <div class="text-center">
                        <a href="/comments/create/{{uuid}}" class="btn btn-danger">Go Live</a>
                    </div>
                </div>
            </div>
            {{/each }}
        </div>
        <div class="d-flex mt-4">
            <hr style="width: 40%;">
            <a href="/stream/retrieve" style="font-size: 18px; text-decoration: none;">View More</a>
            <hr style="width: 40%;">
        </div>
    </div>
</section>

{{!-- CONTACT US --}}
<section id="contact" class="contact">
    <div class="container">

        <div class="section-title">
            <h2>Contact Us</h2>
        </div>

        <div class="row">

            <div class="col-lg-5 col-md-6">
                <div class="contact-about">
                    <h3 class="mt-3 mb-4">STARSTREAM</h3>
                    <p>StarStream is an live streaming service that focuses on music concert live streaming, including
                        broadcasts of competitions.
                        It offers Band, Opera, Choral Music, Recital, Orchestra, others type of concert.
                        Content on the site can be viewed after buying the concert tickets.</p>
                </div>
            </div>

            <div class="col-lg-2">
                <div class="ml-5 mt-4 mb-4" style="border-left: 2px solid #2383c4; height: 250px;"></div>
            </div>

