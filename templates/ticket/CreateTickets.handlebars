<div class="container">
	<div class="card card-body">
		<h3>Ticket Details</h3>
		<form enctype="multipart/form-data" action="/ticket/CreateTickets" method="post" >
			<div class="form-group">
				<label class="font-italic" for="concertName">Concert Name</label>
				<input class="form-control" id="concertName" name="concertName" rows="7"></input>
			</div>
            <div class="form-group">
				<label class="font-italic" for="artistName">Artist Name</label>
				<input class="form-control" id="artistName" name="artistName" rows="7"></input>
			</div>
			<div class="form-group mb-4">
				<label class="font-italic" for="concertStory">Concert Details </label>
				<textarea class="form-control" id="concertStory" name="concertStory" rows="7"></textarea>
			</div>

			<div class="form-group">
				<div class="row mb-2">
					<div class="col-12 col-sm-12 col-md-12 col-lg-6 mb-4">
						<label class="font-italic">Date of Concert</label>
						<input type="date" id="datepicker" width="200" name="concertDate" />
					</div>
					<div class="col-12 col-sm-12 col-md-12 col-lg-6">
						<label class="font-italic">Concert Time</label>
						<br>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" name="concertTime" id="10am ~ 1pm" value="10am ~ 1pm">
							<label class="form-check-label" for="10am ~ 1pm">10am ~ 1pm</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" name="concertTime" id="3pm ~ 6pm" value="3pm ~ 6pm">
							<label class="form-check-label" for="3pm ~ 6pm">3pm ~ 6pm</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" name="concertTime" id="7pm ~ 10pm" value="7pm ~ 10pm">
							<label class="form-check-label" for="7pm ~ 10pm">7pm ~ 10pm</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" name="concertTime" id="12pm ~ 3am" value="12pm ~ 3am">
							<label class="form-check-label" for="12pm ~ 3am">12pm ~ 3am</label>
						</div>
						{{!--<div class="form-check form-check-inline">
							<div class="form-group">
								<input type="text" class="form-control form-control-sm" name="otherSub" id="otherSub" placeholder="Other">
							</div>
						</div>--}}

					</div>
				</div>
			</div>

			<div class="form-group">
				<div class="row">
					<div class="col-12 col-sm-12 col-md-6 col-lg-6">
						<label class="font-italic">Price of Tickets</label>
						<br>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" name="concertPrice" id="concertPrice" value="concertPrice">
							<label class="form-check-label" for="concertPrice">$40</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" name="concertPrice" id="concertPrice" value="concertPrice">
							<label class="form-check-label" for="concertPrice">$50</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" name="concertPrice" id="concertPrice" value="concertPrice">
							<label class="form-check-label" for="concertPrice">$60</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" name="concertPrice" id="concertPrice" value="concertPrice">
							<label class="form-check-label" for="concertPrice">$70</label>
						</div>
						{{!--<div class="form-check form-check-inline">
							<div class="form-group">
								<input type="text" class="form-control form-control-sm" name="otherSub" id="otherSub" placeholder="Other">
							</div>
						</div>--}}
					</div>
				<br>
				<div class="form-group">
				<label class="font-italic" for="concertPoster">Concert Image URL</label>
				<br>
				<input type="file" id="concertPoster" name="concertPoster" rows="7"/>
				</div>


					<div class="col-12 col-sm-12 col-md-6 col-lg-6">
						<label class="font-italic">Concert Venue</label>
						<br>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" id="Star Theatre" value="Star Theatre" name="concertVenue" checked>
							<label class="form-check-label" for="Star Theatre">Star Theatre</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" id="Star Lodge" value="Star Lodge" name="concertVenue">
							<label class="form-check-label" for="Star Lodge">Star Lodge</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" id="Star Terrace" value="Star Terrace" name="concertVenue">
							<label class="form-check-label" for="Star Terrace">Star Terrace</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" id="Star Gallery" value="Star Gallery" name="concertVenue">
							<label class="form-check-label" for="Star Gallery">Star Gallery</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" id="Star Loft" value="Star Loft" name="concertVenue">
							<label class="form-check-label" for="Star Loft">Star Loft</label>
						</div>
					</div>
				</div>

			</div>
			
			<br>
			<button type="submit" class="btn btn-primary">Save
			</button>
		</form>
	</div>
</div>


<script>
		$('#datepicker').datepicker({
			format: 'dd/mm/yyyy',
			value: new Date().toLocaleDateString('en-AUS'),
			uiLibrary: 'bootstrap4',
		});
</script>